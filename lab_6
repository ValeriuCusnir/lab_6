#include <iostream>
using namespace std;


//1
class Hospital;

class Person : Hospital
{
protected:
  string title;
  string givenName;
  string middleName;
  string familyName;
  string birthDate;
  string gender;
  string phone;
  string homeAddress;
  string Hospital;

};

class Hospital : Person {
    private:
         Departament* departament;

protected:
  string id;
  string address;
  string phone;
  string Person;

};

class Departament {
    private: Staff* staff;

};


class Staff : Person {
protected:
  string joined;
  string education[10];
  string certifications[10];
  string languages[10];

};


class Patient: Person {
protected:
   string id;
   string accepted;
   string sickness [10];
   string prescriptions[10];
   string allergies[10];
   string specialReqs[10];


};
//6
class OperationsStaff : Staff {

};

class Doctor : OperationsStaff  {
protected:
    string specialty[10];
    string locations[10];

};
//7

//8
